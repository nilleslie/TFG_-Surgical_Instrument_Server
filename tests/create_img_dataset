# Import the necessary libraries
import cv2
import os

# Object names: scissors, knife, tweezers
# USED TO CREATE LABELED IMAGES TO TRAIN THE MODEL
object_name = "tweezers"

# Directory where the images will be saved
directory = rf'C:\Users\nbsal\Desktop\TFG\dataset_prova\{object_name}'
os.makedirs(directory, exist_ok=True)

# Initialize the webcam
cap = cv2.VideoCapture(0)

# Set the webcam resolution
cap.set(cv2.CAP_PROP_FRAME_WIDTH, 1280)
cap.set(cv2.CAP_PROP_FRAME_HEIGHT, 720)

if not cap.isOpened():
    print("The webcam could not be opened properly.")
    exit()
print(f"[{object_name.upper()}] Press 'c' to capture an image, 'v' to view them, or 'q' to exit.")

counter = len(os.listdir(directory)) + 1  # Continue with sequential filenames

while True:
    ret, frame = cap.read()
    if not ret:
